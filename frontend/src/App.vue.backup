    RecipeListing,
  },
  methods: {
    truncateRecipeName: function(recipeName, length = 50) {
      if (recipeName.length > length) {
        return recipeName.slice(0, length-3) + "..."
      } else {
        return recipeName
      }
    },
  },
};
